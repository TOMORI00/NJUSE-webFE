<script src="../js/jquery.min.js"></script>
<script>
    $(function() {
        var test = /_min\.webp/
        $(".imgBox").each(function(index, obj) {
            if (test.test($(this).attr("src"))) {
                var reSrc = $(this).attr("src").replace(test, "_min\.png");
                $(this).attr("src", reSrc)
            }
        })
    })
</script>

