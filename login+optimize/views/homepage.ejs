    <style>
        body {
            min-width: 800px;
        }
        #header {
            background: #f8f8f8;
            position: sticky;
            z-index: 999;
            top: 5px;
            width: 100%;
            height: 40px;
            display: flex;
            border-radius: 5px;
            margin-left: 5px;
            margin-right: 5px;
        }
        #container {
        }
        #footer {
            clear: both;
        }
        #center {
            margin-left: auto;
            margin-right: auto;
            width: 900px;
        }
        #left {
            background: aqua;
            width: 200px;
            margin-left: -100%;
            position: relative;
            right: 200px;
        }
        #right {
            background: chocolate;
            width: 200px;
            margin-right: -200px;
        }

        #title1 {
            font-size: 28px;
            font-weight: 800;
            text-align: left;
            letter-spacing: 1px;
